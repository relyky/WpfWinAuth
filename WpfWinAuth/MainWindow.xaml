<Window x:Class="WpfWinAuth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWinAuth"
        mc:Ignorable="d"
        Title="MainWindow" Height="368" Width="663">

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="80"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <WrapPanel Grid.Row="0" Margin="8,0,8,8" Background="LightGreen">
      <Button Content="確認" Padding="8,4" Margin="8" Click="Button_Click" />
    </WrapPanel>
    <ScrollViewer Grid.Row="1" Margin="8,0,8,8" Padding="8" Background="LightGray" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" CanContentScroll="True">
      <TextBlock x:Name="messageBox" TextWrapping="Wrap" />
    </ScrollViewer>
  </Grid>
</Window>
